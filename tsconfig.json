{
  "compilerOptions": {
    // ✅ AGREGAR ESTAS DOS:
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "module": "nodenext",
    "target": "ES2021",        // ⚠️ cambiar de "esnext" — emitDecoratorMetadata
                                //    no funciona bien con esnext

    // ❌ QUITAR ESTAS — son incompatibles con NestJS:
    // "verbatimModuleSyntax": true,   // rompe emitDecoratorMetadata
    // "isolatedModules": true,        // conflicto con decoradores de metadata

    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
  }
}